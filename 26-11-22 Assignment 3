a=int(input('Enter a:'))
c=a>>1;
print('Right Shift value',c);
c=a>>2;
print('Right Shift value',c);
c=a>>3;
print('Right Shift value',c);
c=a>>4;
print('Right Shift value',c);
c=a>>5;
print('Right Shift value',c);
c=a>>6;
print('Right Shift value',c);
c=a>>7;
print('Right Shift value',c);
c=a>>8;
print('Right Shift value',c);
c=a>>9;
print('Right Shift value',c);
c=a>>10;
print('Right Shift value',c);

