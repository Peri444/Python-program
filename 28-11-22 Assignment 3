bal=1000;
credited_amount=int(input('Enter amount:'))
if(credited_amount>=bal):
     d=credited_amount+bal;    
     print('Transaction processing successfully....')
     print('credited amount:',credited_amount)
     print('Main balance',d)
     
  OUTPUT:
     Enter amount:5000
     Transaction processing successfully....
     credited amount: 5000
      Main balance 6000
      
      Enter amount:1000
      Transaction processing successfully....
      credited amount: 1000
      Main balance 2000
